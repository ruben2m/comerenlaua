%p.menu-semanal
  =form_for @menu do |f|
    =f.select :day_of_week, options_for_select(@day_names)
      -# Muestro todos los menus, sean o no del dia, marcando
        los que son del d√≠a
      -@menus.each do |m|
        -checked = not @day.menus.where(id: m.id).empty?
        =f.check_box m.title, checked: checked


